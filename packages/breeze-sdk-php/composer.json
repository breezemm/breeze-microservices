{
    "name": "myanmarcyberyouths/breeze-sdk-php",
    "description": "Breeze internal API communication SDK",
    "keywords": [
        "myanmarcyberyouths",
        "breeze-sdk-php"
    ],
    "homepage": "https://github.com/myanmarcyberyouths/breeze-sdk-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Aung Myat Moe",
            "email": "aungmyatmoe834@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "MyanmarCyberYouths\\BreezeSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyanmarCyberYouths\\BreezeSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
