{
    "name": "myanmarcyberyouths/breeze",
    "description": "Monorepo for Breeze",
    "authors": [
        {
            "name": "Aung Myat Moe",
            "role": "CEO",
            "email": "aungmyatmoe834@gmail.com"
        }
    ],
    "homepage": "https://www.cyberyouths.com.mm",
    "require": {
        "php": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "MyanmarCyberYouths\\CommandWatcher\\": "packages/command-watcher/src"
        }
    },
    "require-dev": {
        "schranz/mono": "^2.2",
        "laravel/pint": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "mono": "mono"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
