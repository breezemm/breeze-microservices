{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "turbo run lint && turbo run format"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.6.2",
    "@commitlint/prompt": "^18.6.1",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "name": "breeze",
  "workspaces": [
    "apps/*",
    "packages/*",
    "research/*",
    "docs/*"
  ],
  "dependencies": {
    "contentlayer": "^0.3.4",
    "next-contentlayer": "^0.3.4"
  }
}
